                    <div class="row">
                        <div class="col-lg-6">
                            <div class="input-holder">
                                <input asp-for="Name" type="text" placeholder="Your name">
                            </div><!-- /.input-holder -->
                        </div><!-- /.col-lg-6 -->
                        <div class="col-lg-6">
                            <div class="input-holder">
