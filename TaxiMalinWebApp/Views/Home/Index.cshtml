                            </div><!-- /.input-holder -->
                        </div><!-- /.col-lg-6 -->
                        <div class="col-lg-12">
                            <div class="input-holder">
                                <input asp-for="NbrePassager" type="text"  placeholder="Passengers #">
                            </div><!-- /.input-holder -->
                        </div><!-- /.col-lg-12 -->
                        <div class="col-lg-12">
                            <div class="input-holder">
                                <input asp-for="AdresseDepart" type="text"  placeholder="Pick up address">
