                            </div><!-- /.input-holder -->
                        </div><!-- /.col-lg-6 -->
                        <div class="col-lg-6">
                            <div class="input-holder">
                                <select asp-for="SelectTime" class="selectpicker">
                                    <option>Select Time</option>
                                    <option value="10">10am</option>
                                    <option value="11">11am</option>
                                    <option value="12">12am</option>
                                    <option value="13">13am</option>
