
@{
    ViewData["Title"] = "Reserver une course depuis l'Essonne";

}
@model TaxiMalinWebApp.Models.Reservation
<style>
    span.e-input-group-icon.e-date-icon.e-icons {
        display: none;
    }
</style>
<section class="inner-banner">
    <div class="container">
        <h1>Réserver une course</h1> 
        <h2>Réserver une course</h2>
    </div><!-- /.container -->
</section><!-- /.inner-banner -->
<section class="book-ride-two">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="block-title">
                    <div class="dot-line"></div><!-- /.dot-line -->
                    <p>Besoin d'un taxi ou d'un chauffeur ?</p>
                    <h2>Faites votre réservation</h2>
                </div><!-- /.block-title -->
                <form asp-controller="Home" asp-action="AddReservation" class="booking-form-two ">
                    <p>Obtenez une réponse rapide par un de nos agents</p>
                    <h3 class="form-block-title">Remplissez les informations</h3><!-- /.form-block-title -->
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="input-holder">
                                <input asp-for="Name" type="text" name="name" placeholder="Votre nom">
                            </div><!-- /.input-holder -->
                        </div><!-- /.col-lg-6 -->
                        <div class="col-lg-6">
                            <div class="input-holder">
                                <input asp-for="Email" type="text" name="Email" placeholder="adresse courriel">
                            </div><!-- /.input-holder -->
                        </div><!-- /.col-lg-6 -->
                        <div class="col-lg-6">
                            <div class="input-holder">
                                <input asp-for="NumeroTelephone" type="text" name="NumeroTelephone" placeholder="Téléphone">
                            </div><!-- /.input-holder -->
                        </div><!-- /.col-lg-6 -->
                        <div class="col-lg-6">
                            <div class="input-holder">
                                <input asp-for="NbrePassager" type="text" name="NbrePassager" placeholder="Passagers 1-4 max" min="1" max="4" step="1">
                            </div><!-- /.input-holder -->
                        </div><!-- /.col-lg-6 -->
                        <div class="col-lg-6">
                            <div class="input-holder">
                                <input asp-for="AdresseDepart" type="text" name="AdresseDepart" placeholder="Adresse de départ">
                            </div><!-- /.input-holder -->
                        </div><!-- /.col-lg-6 -->
                        <div class="col-lg-6">
                            <div class="input-holder">
                                <input asp-for="AdresseDestination" type="text" name="AdresseDestination" placeholder="destination">
                            </div><!-- /.input-holder -->
                        </div><!-- /.col-lg-6 -->
                        <div class="col-lg-6">
                            <div class="input-holder">
                                <input class="form-control" asp-for="DateReservation" type="date" name="DateReservation" placeholder="Select date">
                              
                            </div><!-- /.input-holder -->
                        </div><!-- /.col-lg-6 -->
                        <div class="col-lg-6">
                            <div class="input-holder">
                                
                                    <input class="form-control" asp-for="SelectTime" type="time" name="SelectTime" placeholder="Select date">
                                  
                            </div><!-- /.input-holder -->
                        </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                    <button type="submit" class="book-btn">Réserver</button>
                </form><!-- /.booking-form-two -->
            </div><!-- /.col-lg-8 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.book-ride-two -->
<section class="cta-style-one text-center">
    <div class="container">
        <h1>OU</h1>
        <h3>Appelez et reserver <br> par téléphone </h3>
      
        <a callto="0613542724" class="cta-btn">06-13-54-27-24</a>
    </div><!-- /.container -->
</section><!-- /.cta-style-one -->